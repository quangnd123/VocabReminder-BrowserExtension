{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0.0",
    "description": "???????",
    "action": {
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "assets/content-css.css"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "web_accessible_resources": [{
      "matches": ["https://*/*"],
      "resources": ["assets/*"]
   }]
}